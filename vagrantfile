Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"
  config.vm.boot_timeout = 600
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 2048
    vb.cpus = 2
  end

  # VM: Desarrollo
  config.vm.define "dev" do |dev|
    dev.vm.hostname = "dev.lab"
    dev.vm.network "private_network", ip: "192.168.56.10"
    dev.vm.provision "shell", path: "provision/dev.sh"
  end

  # VM: Aplicaciones
  config.vm.define "app" do |app|
    app.vm.hostname = "app.lab"
    app.vm.network "private_network", ip: "192.168.56.11"
    app.vm.provision "shell", path: "provision/app.sh"
  end

  # VM: Monitorizaci√≥n
  config.vm.define "monitoring" do |mon|
    mon.vm.hostname = "monitoring.lab"
    mon.vm.network "private_network", ip: "192.168.56.12"
    mon.vm.provision "shell", path: "provision/monitoring.sh"
  end
end
